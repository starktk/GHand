<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".start.StartActivity"
        android:background="@color/Strong_green">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GHAND"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/btn_fornecedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_home"
            android:background="@drawable/btn_cornes"
            android:hint="@string/btn_fornecedor"/>

        <Button
            android:id="@+id/btn_agenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_fornecedor"
            android:background="@drawable/btn_cornes"
            android:hint="@string/btn_agenda"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>